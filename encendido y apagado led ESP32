const int ledPin = 13; // Utilizamos el LED incorporado para la demostraci√≥n

void setup() {
  pinMode(ledPin, OUTPUT);
  Serial.begin(9600);
}

void loop() {
  if (Serial.available()) {
    char character = Serial.read();
    
    if (character == 'H') {
      digitalWrite(ledPin, HIGH);
    }
    else if (character == 'L') {
      digitalWrite(ledPin, LOW);
    }
  }
}
